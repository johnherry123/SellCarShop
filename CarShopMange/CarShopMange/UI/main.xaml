<Window x:Class="CarShopMange.UI.main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helper="clr-namespace:CarShopMange.Helper"
        xmlns:local="clr-namespace:CarShopMange.UI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="CarShop UI" Height="800" Width="1100"
        WindowStyle="None" ResizeMode="CanResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#A970FF"/>
        <SolidColorBrush x:Key="SidebarHover" Color="#30FFFFFF"/>
        <SolidColorBrush x:Key="SidebarSelected" Color="#80FFFFFF"/>
        <helper:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Text="{TemplateBinding Tag}"
                                           Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="{TemplateBinding Content}"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding ElementName=Sidebar, Path=Tag, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resource/hinh-nen-bau-troi-binh-minh-hoang-hon-3.jpg.webp" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border x:Name="MainBorder" CornerRadius="20" Background="#30FFFFFF">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="SidebarColumn" Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="1" Grid.Column="0" x:Name="Sidebar" Background="#33FFFFFF" Width="200" Margin="10" Tag="True" >
                    <StackPanel Margin="5" >
                        <Button x:Name="ToggleButton"
                                FontFamily="Segoe MDL2 Assets"
                                Content="Toggle"
                                Tag="&#xE700;"
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="ToggleSidebar_Click"
                                ToolTip="Toggle Sidebar"/>


                        <Button Tag="&#xE790;" TabIndex="0" Content="Themes" Style="{StaticResource SidebarButtonStyle}" Click="Sidebar_Click" ToolTip="Themes"/>
                        <Button Tag="&#xE8D2;" TabIndex="1" Content="Design Values" Style="{StaticResource SidebarButtonStyle}" Click="Sidebar_Click" ToolTip="Design Values"/>
                        <Button Tag="&#xE8EF;" TabIndex="2" Content="Global Styles" Style="{StaticResource SidebarButtonStyle}" Click="Sidebar_Click" ToolTip="Global Styles"/>
                        <Button Tag="&#xE8AB;" TabIndex="3" Content="Design Patterns" Style="{StaticResource SidebarButtonStyle}" Click="Sidebar_Click" ToolTip="Design Patterns"/>
                        <Button Tag="&#xE7FC;" TabIndex="4" Content="Development" Style="{StaticResource SidebarButtonStyle}" Click="Sidebar_Click" ToolTip="Development"/>
                    </StackPanel>
                </DockPanel>

                <!-- Window Control Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,10,0">
                    <Button Content="&#xE921;" Style="{StaticResource WindowControlButtonStyle}" Click="Minimize_Click" ToolTip="Minimize"/>
                    <Button Content="&#xE922;" Style="{StaticResource WindowControlButtonStyle}" Click="MaximizeRestore_Click" ToolTip="Maximize"/>
                    <Button Content="&#xE8BB;" Style="{StaticResource WindowControlButtonStyle}" Click="Close_Click" ToolTip="Close"/>
                </StackPanel>

                <!-- Tab Content -->
                <TabControl x:Name="MainTabControl" Grid.Row="1" Grid.Column="1" Background="Transparent" BorderThickness="0" Margin="10">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Style>
                    </TabControl.Resources>
                    <TabItem>
                        <TabItem.Content>
                            <Border Background="#66FFFFFF" CornerRadius="10" Padding="10">
                                <StackPanel Background="WhiteSmoke"   >
                                </StackPanel>
                            </Border>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Content>
                            <Border Background="#66FFFFFF" CornerRadius="10" Padding="20">
                                <TextBlock Text="Design Values content..."/>
                            </Border>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Content>
                            <Border Background="#66FFFFFF" CornerRadius="10" Padding="20">
                                <TextBlock Text="Global Styles content..."/>
                            </Border>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Content>
                            <Border Background="#66FFFFFF" CornerRadius="10" Padding="20">
                                <TextBlock Text="Design Patterns content..."/>
                            </Border>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Content>
                            <Border Background="#66FFFFFF" CornerRadius="10" Padding="20">
                                <TextBlock Text="Development content..."/>
                            </Border>
                        </TabItem.Content>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Window>
